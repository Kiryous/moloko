.about
  p
    margin 10px 0 30px 0
    position relative
  
  h2
    width 95%
    margin 50px 0 10px 0
    font-family f_headline
    font-size 24px
    font-weight normal
    line-height 1.4em

.team
  @extend .container
  padding 0 0 0 0

.team-member
  width 294px
  display inline-block
  margin 0 35px 35px 0
  
  .photo
    width 80px
    height 80px
    margin 0 10px 0 0
    display inline-block
    vertical-align middle
    background-size cover
    background-position center
    background-repeat no-repeat
    border-radius 50%
    overflow hidden
  
  .info
    max-width 198px
    display inline-block
    vertical-align middle
    font-size 14px
  
  p
    margin 0px 0 0px 0
  
  .name
    font-family 'PT Sans Caption'
    font-weight bold
  
  .role
    font-family f_Helvetica
    margin 0 0 10px 0
  
.team
  .twi, .vk, .fb, .inst
    width 16px
    height 16px
    margin 0 7px 0 0
    vertical-align middle
    background-size 16px 16px
    
