.cover.article
	height 350px

.poster.article
	height 350px

.poster-info.article
	width 1000px
	padding 100px 20px 0 20px
	height 350px
	
	& h1
		border 0

	&:hover h1
		text-shadow none
		border 0

.author
	margin 0 15px 0 0
	display inline-block
	font-weight bold
	font-family f_Default
	
	& .pic
		width 35px
		height 35px
		margin 0 10px 0 0
		display inline-block
		vertical-align middle
		background-size cover
		background-position center
		background-repeat no-repeat
		border-radius 50%
		overflow hidden
		
.infobar
	width 960px
	font-size 16px
	position absolute
	bottom 15px
	
	.date, .views
		opacity 0.8
	
	.date, .views
		font-size 14px

	.views
		margin 0 15px 0 0
		padding 0 0 0 35px
		background-image url(../source/images/eye.svg)
		background-position left center
		background-repeat no-repeat
	
	.likely
		float right

.article-wrap
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 40px 20px 
	position relative

article
	width 650px
	font-family f_text
	font-size 18px
	line-height 25px
	
	& p
		margin 20px 0 20px 0
		
	& h2
		margin 40px 0 0 0
		font-family f_headline
		text-align center
		line-height 1.4em
	
	& .image
		width 750px
		margin 40px -50px 40px 
		overflow hidden
		
		& img
			max-width 800px
			
		& span
			margin 5px 0 0 50px
			font-size 16px
			color rgba(0, 0, 0, 0.7)	
			
	& aside
		position absolute
		right 20px
		width 200px
		font-size 16px
		line-height 1.4em
		color gray
		
		& .number
			font-size 36px
			//color rgba(0, 0, 0, 0.7)
			text-align center
			
	& .expert
		@extend .author
		margin 40px 0 20px 0
		
		& .pic
			vertical-align middle
			width 70px
			height 70px
			
		& .info
			margin 0 10px 0 0
			display inline-block
			vertical-align middle
			
		& .who
			font-size 16px
			font-weight normal
		
		& p
			margin 20px 0 20px 40px
			font-weight normal
			font-family f_text

.relevant-wrap
	width 100%
	background rgba(204, 226, 240, 0.7)
	
.relevant
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 20px 20px
		
	& .tags
		margin 20px 0 20px 0
		
		& span
			margin 0 15px 0 0
			display inline-block
			font-family f_headline
			font-size 18px
			font-weight bold
			color rgba(41, 146, 228, 0.3)
			
		& ul
			display inline-block
			
			& li
				margin 0 10px 0 0
				display inline-block
				opacity 0.65
	
	& .one
		margin 15px 15px 15px 0px

.comments-wrap
	width 100%
	background rgba(232,239,243,0.4)
	
	.comments
		@extend .relevant