	& .tags
		margin 20px 0 20px 0

		& span
			margin 0 15px 0 0
			display inline-block
			font-family f_headline
			font-size 18px
			font-weight bold
			color rgba(41, 146, 228, 0.3)

		& ul
			display inline-block

			& li
				margin 0 10px 0 0
				display inline-block
				opacity 0.65

	& .one
		margin 15px 15px 15px 0px

.comments-wrap
	width 100%
	background rgba(232,239,243,0.4)

	.comments
		@extend .relevant
