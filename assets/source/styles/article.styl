.cover.article
	height 350px

.poster.article
	height 350px

.poster-info.article
	width 1000px
	padding 150px 20px 0 20px
	height 350px

	// @media mobile
	// 	width 100%
		
	& .caption
		padding 0 60px 0 0
		width 960px

	& h1
		font-size 36px
		border 0

	&:hover h1
		text-shadow none
		border 0
		
	& .rights
		position absolute
		bottom 55px
		right 20px

.rights
	opacity 0.2
	font-size 12px
	font-family f_Default
	vertical-align middle

.author
	margin 0 15px 0 0
	display inline-block
	font-family f_Default

	& .pic
		width 35px
		height 35px
		margin 0 10px 0 0
		display inline-block
		vertical-align middle
		background-size cover
		background-position center
		background-repeat no-repeat
		border-radius 50%
		overflow hidden

.infobar
	width 960px
	font-size 16px
	position absolute
	bottom 15px

	.date, .views
		opacity 0.8

	.date, .views
		font-size 14px

	.views
		margin 0 15px 0 0
		padding 0 0 0 35px
		background-image url(../source/images/eye.svg)
		background-position left center
		background-repeat no-repeat
	
	.likely
		margin 5px 0 0 0
		float:right;

.article-wrap
	@extend .container
	position relative

article
	width 650px
	padding 0 0 70px 0
	font-family f_text
	font-size 18px
	line-height 25px

	// @media mobile
	// 	width 100%

	& p
		margin 10px 0 30px 0
		position relative

	& h2
		width 95%
		margin 50px 0 10px 0
		font-family f_headline
		font-size 24px
		font-weight normal
		line-height 1.4em

	& .image
		width 750px
		margin 40px -50px 40px -50px
		overflow hidden

		// @media mobile
		// 	width 100%
		// 	margin 40px -20px 40px -20px

		& img
			max-width 800px
			margin 0 0 5px 0

		// @media mobile
		// 	width 120%

		& p
			margin 0 0 0 50px
			font-size 16px
			color rgba(0, 0, 0, 0.7)
			
		& .rights
			display block
			opacity 0.4

	& aside
		width 200px
		margin 5px 0 0 0
		position absolute
		right 30px
		font-size 16px
		line-height 1.4em
		color gray

		// @media mobile
		// 	width 100%
		// 	margin 0 0 0 30px
		// 	padding 20px 0 10px 0
		// 	position relative
		// 	text-align center
		// 	border-top 1px solid rgba(0, 0, 0, 0.1)
		// 	border-bottom 1px solid rgba(0, 0, 0, 0.1)

		& .number
			padding 0 0 10px 0
			font-size 48px
			text-align center
			font-family f_headline
		
		& p
			margin 10px 0 0 0px
			position relative

		& img
			max-width 200px
			padding 2px
			border 1px solid rgba(0, 0, 0, .2)
		
		& a.img
			// display block
			// border-bottom 0
			
			& img:hover
				border-color rgba(208, 64, 0, .3)
		
	& blockquote
		width 750px
		min-height 170px
		margin 40px 0px 40px -50px
		padding 20px 20px 25px 80px
		display block
		position relative
		overflow hidden
		background-size cover !important
		// background-position center !important
		
		&:before
			content '«'
			position absolute
			top 30px
			left 35px
			font-size 50px
			font-family 'Verdana'
			z-index 1

		&:after
			content ' '
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			background rgba(255, 255, 255 ,0.6)
			transition .2s
		
		& .text
			position relative
			z-index 1
			font-size 24px
			font-family 'Playfair Display'
			line-height 1.2em
		
		& .likely
			position relative
			z-index 1
			
			& .likely__icon
				padding 5px
			
			& .likely__widget
				background none
				
				& svg
					width 20px
					height 20px
				
				& svg path
					fill: rgba(0, 0, 0, 0.6)
					transition .1s
			
			& .likely__widget+.likely__widget
				margin 0 0 0 10px
					
			& .likely__widget_twitter:hover svg path
					fill:rgb(0, 183, 236)
			
			& .likely__widget_vkontakte:hover svg path
					fill:rgb(82, 110, 143)
			
			& .likely__widget_facebook:hover svg path
					fill:rgb(66, 84, 151)

	& .expert
		@extend .author
		width 750px
		padding 30px 40px 10px 80px
		margin 40px 0 20px -50px
		background rgba(0, 0, 0, 0.03)

		// & p:first-of-type:before
		// 	content '–'
		// 	margin-left -0.6em
		// 	font-size 48px

		& .pic
			vertical-align middle
			width 70px
			height 70px

		& .info
			margin 0 15px 0 0
			display inline-block
			vertical-align middle

		& .name
			font-size 20px
			font-family f_headline

		& .who
			font-size 16px
			font-weight normal
			
		& .text
			padding 20px 0 0 0
			position relative
			font-family f_Default
			font-size 17px
			
			&:before
				content '«'
				position absolute
				top 28px
				left -45px
				font-size 50px
				font-family 'Verdana', 'Tahoma'
	
	& .fotorama
		margin 40px -50px 40px -50px 

		.fotorama__nav-wrap
			position absolute
			bottom 10px
			left 10px
			
		.fotorama__nav__shaft
			float left

.relevant-wrap
	width 100%
	background rgba(204, 226, 240, 0.7)

.relevant
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 20px 20px

	// @media mobile
	// 	width 100%
	// 	text-align center

	& .tags
		margin 20px 0 20px 0

		& span
			margin 0 15px 0 0
			display inline-block
