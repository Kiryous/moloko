.grid-wrap
	width 1000px
	min-height 100%
	margin 20px auto 40px auto
	padding 0px 0px 0px 20px

//Общие стили для карточек
.one, .one:visited
	width 300px
	height 150px
	margin 15px 0px 15px 0px
	padding 20px 30px 20px 20px
	position relative
	display inline-block
	overflow hidden
	box-shadow 0px 1px 18px 0px rgba(0, 0, 0, 0.06)
	border-bottom 0
	color rgba(0, 0, 0, 1)
	z-index 1
	
	& *
		transition .1s
		
	& h1
		display inline
		border-bottom 1px solid rgba(0, 0, 0, 0.3)
		font-family f_headline
		font-size 24px
		line-height 32px
		color rgba(0, 0, 0, 1)
	
	& span
		margin 10px 0px 0px 0px
		display inline-block
		font-family f_Default
		font-size 16px
		color rgba(0, 0, 0, 1)

.one:hover
	box-shadow 0px 1px 18px 0px rgba(0, 0, 0, 0.08)
	
	& h1
		color rgba(208, 64, 0, 1)
		border-color rgba(218, 64, 0, .3)
	
	& span
		color rgba(0, 0, 0, 1)

// Карточка с иллюстрацией в углу
.one.illustration 
	padding 20px 90px 20px 20px
	background-position 100% bottom
	background-size 95px
	background-repeat no-repeat

