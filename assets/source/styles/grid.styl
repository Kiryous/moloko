.grid-wrap
	max-width 1000px
	width 1000px
	min-height 100%
	margin 20px auto 40px auto
	padding 0px 0px 0px 20px

//Общие стили для карточек
.one, .one:visited
	width 300px
	height 150px
	margin 15px 25px 15px 0
	padding 20px 30px 20px 20px
	position relative
	display inline-block
	vertical-align top
	overflow hidden
	background-color white
	box-shadow 0 1px 18px 0 rgba(0, 0, 0, 0.06)
	border-bottom 0
	color rgba(0, 0, 0, 1)
	z-index 1

	& h1
		display inline
		border-bottom 1px solid rgba(0, 0, 0, 0.3)
		font-family f_headline
		font-size 22px
		line-height 29px
		color rgba(0, 0, 0, 1)

	& span
		margin 5px 0 0 0
		display inline-block
		font-family f_Default
		font-size 16px
		color rgba(0, 0, 0, 1)

.one:hover
	box-shadow 0 1px 18px 0 rgba(0, 0, 0, 0.08)

	& h1
		color rgba(208, 64, 0, 1)
		border-color rgba(218, 64, 0, .3)

	& span
		color rgba(0, 0, 0, 1)

// Карточка с иллюстрацией в углу
.one.illustration
	padding 20px 95px 20px 20px
	background-position 100% bottom
	background-size 95px
	background-repeat no-repeat

//Карточка с большой иллюстрацией с заголовком сверху
.one.illustration.big
	height 330px
	padding 20px 30px 20px 20px
	background-position center
	background-size cover
	background-repeat no-repeat

	.contents
		width 260px
		text-align center
		position relative
		z-index 1

	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background linear-gradient(rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.6) 20%, rgba(255, 255, 255, 0) 100%)
		transition .2s

	&:hover:after
		opacity 0.7
		transition .2s

//Карточка с большой иллюстрацией с заголовком снизу
.one.illustration.big.down
	.contents
		width 260px
		position absolute
		bottom 20px
		text-align center

	&:after
		background linear-gradient(rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.6) 80%, rgba(255, 255, 255, 0.8) 100%)
		transition .2s

.one.illustration.big.no-gradient
	&:after
		display none

//Маленькая карточка с фотографией
.one.photo
	background-size cover
	position relative
	-webkit-font-smoothing antialiased
	
	.contents
		position relative
		z-index 1
	
	& h1, & span
		color white

	& h1
		border-color rgba(255,255,255,0.3)

	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0,0,0,0.5)
		transition .2s

.one.photo:hover
	& h1, & span
		color white

	& h1
		border-color rgba(255, 255, 255, 0.7)
		text-shadow 0px 0px 10px rgba(191, 226, 255, 0.6)

	&:after
		opacity 0.5
		transition .2s


//Большая карточка с фотографией с заголовком сверху
.one.photo.big
	height 330px

	.contents
		text-align center

	&:after
		background linear-gradient(rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 20%, rgba(0, 0, 0, 0) 100%)
		transition .2s

	&:hover:after
		opacity 0.5
		transition .2s

//Большая карточка с фотографией с заголовком снизу
.one.photo.big.down
	.contents
		width 260px
		position absolute
		bottom 20px
		text-align center

	&:after
		background linear-gradient(rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 80%, rgba(0, 0, 0, 0.8) 100%)
		transition .2s
