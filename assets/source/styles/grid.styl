.grid-wrap
	width 1000px
	margin 20px auto 40px auto
	padding 0px 0px 0px 20px

.one, .one:visited
	width 300px
	height 150px
	margin 15px 0px 15px 0px
	padding 20px 20px 20px 20px
	position relative
	display inline-block
	overflow hidden
	box-shadow 0px 1px 18px 0px rgba(0, 0, 0, 0.06)
	border-bottom 0
	color rgba(0, 0, 0, 1)
	z-index 1

.one h1
	display inline
	border-bottom: 1px solid rgba(0, 0, 0, 0.2)
	font-family f_headline
	font-size 24px
	line-height 32px
	color rgba(0, 0, 0, 1)

.one span
	margin 10px 0px 0px 0px
	display inline-block
	font-family f_Default
	font-size 16px
	color rgba(0, 0, 0, 1)

.one:hover
	//box-shadow 0px 1px 18px 0px rgba(208, 64, 0, 0.10)

	&:after
		content ' '
		width 290px
		height 140px
		position absolute
		top 0
		left 0
		border 5px solid rgba(208, 64, 0, 0.08)
	
	& h1
		//color c_Moloko
		//border-color rgba(41, 146, 228, 0.5)
		color rgba(208, 64, 0, 1)
		border-color rgba(218, 64, 0, .5)
	
	& span
		color rgba(0, 0, 0, 1)

.illustration
	background-position right bottom
	background-size 100px
	background-repeat no-repeat
	
	& span
		width 200px

