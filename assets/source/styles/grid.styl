.grid-wrap
	width 1000px
	margin 20px auto 40px auto
	padding 0px 0px 0px 20px

.one
	width 300px
	height 150px
	margin 15px 0px 15px 0px
	display inline-block
	overflow hidden
	box-shadow 0px 1px 18px 0px rgba(0, 0, 0, 0.06)

.one a, .one a:visited
	width 100%
	height 100%
	padding 20px 20px 20px 20px
	display block
	border-bottom 0
	transition 0
	color rgba(0, 0, 0, 1)
	z-index 1

.one a h1
	display inline
	border-bottom: 1px solid rgba(0, 0, 0, 0.5)
	font-family f_headline
	font-size 24px
	line-height 32px
	color rgba(0, 0, 0, 1)

.one a span
	margin 10px 0px 0px 0px
	display block
	font-family f_Default
	font-size 16px
	color rgba(0, 0, 0, 1)

.one:hover
	box-shadow 0px 1px 18px 0px rgba(0, 150, 209, 0.12)

	& a h1
		color c_Moloko
		border-color rgba(41, 146, 228, 0.5)
	
	& a span
		color rgba(0, 0, 0, 1)

.illustration
	background-position right bottom
	background-size 100px
	background-repeat no-repeat
	filter grayscale(100%)
	
	& span
		width 200px

.basketball
	background-image url(http://i.picasion.com/sp/79/SHS/1.gif)

.basketball:hover
	filter grayscale(0%)
	background-image:url(https://d13yacurqjgara.cloudfront.net/users/99875/screenshots/1791962/chris-paul-dribbble.gif)

.cashflow
	background-image url(http://i.picasion.com/sp/79/SHZ/0.gif)

.cashflow:hover
	filter grayscale(0%)
	background-image:url(https://d13yacurqjgara.cloudfront.net/users/99875/screenshots/1433198/mark-and-john.gif)


.plain
	@extend .one
		
.photo
	background-size cover
	position relative
	
	& a h1, & a span
		position relative
		z-index 1
		color white
	
	& a h1
		border-color rgba(256,256,256,0.5)
	
	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0,0,0,0.5)

.photo:hover
	& a h1, & a span
		color white
		
	& a h1
		border-color rgba(256,256,256,0.3)
		text-shadow: 0px 0px 10px rgba(191, 226, 255, 0.6);
		
	&:after
		background linear-gradient(to bottom, rgba(27, 123, 196, 0.8), rgba(256, 256, 0, 0))		

.big
	height 330px
		
	&:after
		background linear-gradient(rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 20%, rgba(0, 0, 0, 0) 100%)

.big:hover
	&:after
		background linear-gradient(rgba(41, 146, 228, 0.6) 0%, rgba(41, 146, 228, 0.4) 20%, rgba(256, 256, 0, 0) 100%)		


