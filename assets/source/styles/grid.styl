//Маленькая карточка с фотографией
.one.photo
	background-size cover
	position relative

	& h1, & span
		position relative
		z-index 1
		color white
	
	& h1
		border-color rgba(255,255,255,0.3)
	
	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0,0,0,0.5)
		transition .2s

.one.photo:hover
	& h1, & span
		color white
		
	& h1
		//color rgba(255, 255, 255, 0.9)
		border-color rgba(255, 255, 255, 0.7)
		text-shadow 0px 0px 10px rgba(191, 226, 255, 0.6)
		
	&:after
		opacity 0.5
		transition .2s


//Большая карточка с фотографией
.one.photo.big
	height 330px
		
	&:after
		background linear-gradient(rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 20%, rgba(0, 0, 0, 0) 100%)
		transition .2s
		
	&:hover:after
		opacity 0.5
		transition .2s

