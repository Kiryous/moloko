.full
	height 330px
	padding 200px 20px 20px 20px
	background-size 290px
	background-position center top

	&:hover h1
		z-index 1
		//color rgba(23, 109, 178, 1)
		//border-color rgba(41, 146, 228, 0.3)
	
	&:hover:after
		height 320px

.plain
	@extend .one

.photo
	background-size cover
	position relative
	
	& h1, & span
		position relative
		z-index 1
		color white
	
	& h1
		border-color rgba(256,256,256,0.5)
	
	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0,0,0,0.5)

.photo:hover
	& h1, & span
		color white
		
	& h1
		border-color rgba(256,256,256,0.3)
		text-shadow: 0px 0px 10px rgba(191, 226, 255, 0.6);
		
	&:after
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(256, 256, 0, 0))
		border 0

.big
	height 330px
		
	&:after
		background linear-gradient(rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 20%, rgba(0, 0, 0, 0) 100%)

.big:hover
	
	&:after
		background linear-gradient(rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 20%, rgba(0, 0, 0, 0) 100%)		

