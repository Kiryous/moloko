.grid-wrap
	width 1000px
	margin 20px auto 0 auto

.one
	width 300px
	padding 20px 20px 20px 20px
	margin 10px 10px 10px 10px
	display inline-block
	box-shadow 0px 1px 18px 0px rgba(0, 0, 0, 0.06)
		
	&.plain
		height 150px
		
	&.photo a h1, &.photo a span
		color white

	&.photo
		height 150px
		background-size cover
		position relative
		
		&.big
			height 320px
			
			& a:after
				content ' '
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				background linear-gradient(rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0.8) 20%, rgba(0, 0, 0, 0) 100%)

.one a, .one a:visited
	display block
	padding 0
	border-bottom 0
	transition 0
	color rgba(0, 0, 0, 1)
	z-index 5

.one a h1
	display inline
	border-bottom: 1px solid rgba(0, 0, 0, 0.5)
	font-family f_headline
	font-size 24px
	line-height 32px
	color rgba(0, 0, 0, 1)

.one a span
	margin 10px 0px 0px 0px
	display block
	font-family f_Default
	font-size 16px
	color rgba(0, 0, 0, 1)

.one:hover
	box-shadow 0px 1px 18px 0px rgba(0, 150, 209, 0.12)

	& a h1
		color c_Moloko
		border-color rgba(41, 146, 228, 0.5)
	
	& a span
		color rgba(0, 0, 0, 1)
