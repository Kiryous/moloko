//Подвал
.footer-wrap
	width 100%
	min-height 150px
	background rgba(42, 50, 55, 0.03)
	box-shadow inset 0px 1px 18px 0px rgba(0, 0, 150, 0.06)	
	color rgba(0, 0, 0, 0.9)

.footer
	width 1000px
	min-height 150px
	margin 0px auto 0px auto
	padding 40px 20px 0px 20px
	position relative
	font-size 16px
	//background-image url(../source/images/dead.png)
	background-size 400px
	background-repeat no-repeat
	background-position 350px 39%

.ask
	width 500px
	display inline-block

	.text
		display inline-block
		vertical-align top
	
	.likely
		vertical-align middle
		margin 10px 0 0 0
	
	.likely__widget
		height 26px
		padding 2px 3px 2px 3px
		
		&:first-of-type
			margin 0 0 0 0
	
	.likely__button
		padding 1px 4px 1px 2px 
		
	.likely .likely__widget+.likely__widget
		margin 0 0 0 10px

.copyright
	display inline-block
	vertical-align top
	float right

	span
		margin 0 15px 0 0
		color rgba(0, 0, 0, 0.6)
		
	p
		margin 10px 0 0 0
		font-size 14px
		color rgba(0, 0, 0, 0.6)
	
	ul
		display inline-block	

	ul li
		display inline-block
		margin 0px 15px 0px 0px


