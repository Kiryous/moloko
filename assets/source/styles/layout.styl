@import 'variables'
@import 'starty'

body
  width 100%
  font-family f_Helvetica
  background rgba(256, 256, 256, 1)
  font-size 18px
  line-height 20px

.header-wrap
	width 100%
	position absolute
	top 0
	left 0
	z-index 1

header
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 0px 20px

.logo
	width 171px
	height 44px
	display inline-block
	background-image url(../source/images/logo-all-white.png)
	background-size 171px 44px
	border 0
	z-index 1

@import 'social-links'

.search
	width 200px
	height 44px
	padding 8px 12px 8px 42px
	position relative
	float right
	background transparent
	background-image url(../source/images/search.png)
	background-size 18px
	background-position 10px center
	background-repeat no-repeat
	border 1px solid rgba(256,256,256,1)
	opacity 0.5
	color white
	
	&:focus
		opacity 0.9

//Узнать, справится ли Автоприфексер, переписать
.search::-webkit-input-placeholder,
.search::-moz-placeholder,
.search:-moz-placeholder,
.search:-ms-input-placeholder
 color:rgba(255, 255, 255, 0.6)

.poster
	width 100%
	height 300px
	color white

.poster 
	.poster-info
		width 840px
		padding 100px 0px 0px 0px
		margin 0 auto 0 auto	
		display block
		
	& span
		margin 20px 0px 0px 0px 
		display block
		color white
	
	&:hover h1
		color rgba(256, 256, 256, 0.7)
		border-color rgba(256, 256, 256, 0.3)

.poster
  .image
	  width 200px
	  height 200px
	  margin 0px 0px 0px 40px
	  display inline-block
	  background-size cover
	  background-position top
	  background-repeat no-repeat

.caption
	width 500px
	margin 30px 40px 0px 20px
	vertical-align top
	display inline-block

.caption 
	h1	
		margin 0px 0px 25px 0px
		display inline
		border-bottom 1px solid rgba(256, 256, 256, 0.5)
		font-family f_headline
		font-size 36px
		line-height 44px 
		color white
	
	span
		font-size 18px
		font-family f_Default

.news
	width 100%
	min-height 100px
	padding 10px 0px 10px 0px
	background rgba(41, 146, 228, 0.1)

.scrollyeah
	width 960px
	margin auto auto auto auto

.entry
	max-width 320px
	min-height 80px
	margin 0px 20px 0px 0px
	padding 5px 0px 10px 3px
	vertical-align top
	display inline-block
	font-size 16px
	
	& span
		font-size 12px
		color rgba(0, 0, 0, 0.5)

.smallcapitals {
  font-size: .88em;
  letter-spacing: .15em;
  margin-right: -.15em;
}

@import 'grid'

.footer-wrap
	width 100%
	height 120px
	background rgba(245, 245, 245, 1);

.footer
	width 1000px
	height 120px
	margin 0px auto 0px auto
	padding 40px 40px 0px 40px
	font-size 16px
	
	& ul li
		display inline-block
		margin 0px 15px 0px 0px

@import 'typo'
