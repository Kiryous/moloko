@import 'variables'
@import 'starty'

body
  width 100%
  font-family f_Helvetica
  background rgba(255, 255, 255, 1)
  font-size 18px
  line-height 20px

//Шапка
.header-wrap
	width 100%
	position absolute
	top 0
	left 0
	z-index 2

header
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 0px 20px

.logo,.logo:visited
	width 171px
	height 44px
	padding 10px 10px 10px 11px
	display inline-block
	vertical-align top
	//background-image url(../source/images/logo-all-white.png)
	//background-size 171px 44px
	border 0
	font-family 'Shadow'
	font-size 32px
	color white
	z-index 1
	
	&:hover
		border-color white
		color white

@import 'social-links'

.search
	width 200px
	height 44px
	padding 8px 12px 8px 42px
	position relative
	float right
	background transparent
	background-image url(../source/images/search.svg)
	background-size 18px
	background-position 10px center
	background-repeat no-repeat
	border 0
	opacity 0.5
	color white
	transition .2s
	
	&:focus
		opacity 0.9
		transition .2s

//Автопрефиксер не справляется, пришлось оставить
.search::-webkit-input-placeholder
	color:rgba(255, 255, 255, 0.6)
.search::-moz-placeholder
	color:rgba(255, 255, 255, 0.6)
.search :-moz-placeholder
	color:rgba(255, 255, 255, 0.6)
.search :-ms-input-placeholder
  color:rgba(255, 255, 255, 0.6)

