@import 'variables'
@import 'starty'

body
  width 100%
  font-family f_Helvetica
  background rgba(255, 255, 255, 1)
  font-size 18px
  line-height 20px

.header-wrap
	width 100%
	position absolute
	top 0
	left 0
	z-index 1

header
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 0px 20px

.logo,.logo:visited
	width 171px
	height 44px
	padding 10px 10px 10px 11px
	display inline-block
	vertical-align top
	//background-image url(../source/images/logo-all-white.png)
	//background-size 171px 44px
	border 3px solid white
	font-family 'Shadow'
	font-size 32px
	color white
	z-index 1
	
	&:hover
		border-color white
		color white

@import 'social-links'

.search
	width 200px
	height 44px
	padding 8px 12px 8px 42px
	position relative
	float right
	background transparent
	background-image url(../source/images/search.svg)
	background-size 18px
	background-position 10px center
	background-repeat no-repeat
	border 1px solid rgba(255,255,255,1)
	opacity 0.5
	color white
	
	&:focus
		opacity 0.9

//Автопрефиксер не справляется, пришлось оставить
.search::-webkit-input-placeholder,
.search::-moz-placeholder,
.search:-moz-placeholder,
.search:-ms-input-placeholder
 color:rgba(255, 255, 255, 0.6)
	
.fotorama__arr--prev
	margin 0 0 0 30px
	background url(../source/images/prev.svg)

.fotorama__arr--next
	margin 0 30px 0 0
	background url(../source/images/next.svg)
	
.fotorama__arr--prev,.fotorama__arr--next
	background-repeat no-repeat
	background-position center
	width 31px
	height 58px
	
.fotorama__arr--prev:hover, .fotorama__arr--next:hover
	//background-size 31px 40px
	transform scaleY(0.7)

.poster
	width 100%
	height 300px
	color white

.poster 
	.poster-info
		width 840px
		padding 100px 0px 0px 0px
		margin 0 auto 0 auto	
		display block
		
	& span
		margin 20px 0px 0px 0px 
		display block
		color white
	
	&:hover h1
		color rgba(255, 255, 255, 0.7)
		border-color rgba(255, 255, 255, 0.3)

.poster
  .image
	  width 200px
	  height 200px
	  margin 0px 0px 0px 40px
	  display inline-block
	  background-size cover
	  background-position top
	  background-repeat no-repeat

.caption
	width 500px
	margin 30px 40px 0px 20px
	vertical-align top
	display inline-block

.caption 
	h1	
		margin 0px 0px 25px 0px
		display inline
		border-bottom 1px solid rgba(255, 255, 255, 0.5)
		font-family f_headline
		font-size 36px
		line-height 44px 
		color white
	
	span
		font-size 18px
		font-family f_Default

.news
	width 100%
	min-height 100px
	padding 20px 0px 10px 0px

.news .scrollyeah
	width 960px
	margin auto auto auto auto
	
.scrollyeah__shadow_prev,.scrollyeah__shadow_next
	opacity 0.2

.entry
	max-width 320px
	min-height 80px
	margin 0px 20px 0px 0px
	padding 5px 0px 10px 3px
	vertical-align top
	display inline-block
	font-size 16px
	
	span
	  font-size 10px
	  color rgba(0, 0, 0, 0.7)
		
.smallcapitals 
	text-transform: uppercase
  font-size .88em
  letter-spacing .15em
  margin-right -.15em

@import 'grid'

.shots
	width 100%
	max-width 100%
	overflow hidden
	
	h3
		width 920px
		margin 0 auto 15px auto
		font-size 18px

#instapics
	width 110%
	height 96px
	
	div
	  width 96px
	  height 96px
	  display inline-block
	  position relative

#instapics a
	width 100%
	height 100%
	display inline-block
	position relative
	background-size 96px
	background-position center
	border 0
	transition .2s ease
	
	&:hover
		transition .2s ease
		
	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0, 0, 0, 0.5)
		transition .2s ease
		
	&:hover:after
		background transparent
		transition .2s ease

.footer-wrap
	width 100%
	height 180px
	background rgba(42, 50, 55, 1)
	color rgba(255, 255, 255, 1)

.footer
	width 1000px
	height 180px
	margin 0px auto 0px auto
	padding 40px 40px 0px 40px
	font-size 16px

.infooter
	width 460px
	display inline-block
	vertical-align top
	margin 0px 0px 0px 0px

	ul li
		display inline-block
		margin 0px 15px 0px 0px
		
	.likely
		margin 15px 0px 0px 0px
	
	.likely__widget
		height 26px
		padding 2px 3px 2px 3px
		opacity 0.6
		
		&:hover
		  opacity 1
	
	.likely__button
		padding 1px 4px 1px 2px 

.ask
	width 450px
	display inline-block
	float right

	p
		width 400px
		margin 0px 0px 15px 0px

.money
	min-width 380px
	height 55px
	padding 10px 10px 0px 0px
	vertical-align top
	display inline-block
	position relative
	background white
	border-radius 3px

	input[type=submit]
		height 35px
		margin 0px 0px 0px 10px
		padding 5px 15px 5px 15px
		vertical-align top
		background linear-gradient(to bottom, rgba(36, 175, 242, 0.7), rgba(41, 146, 228, 1))
		border-radius 3px
		border 0
		color white
		cursor pointer
		
		&:hover
			opacity 0.8

.moloko
		font-family 'Shadow'
		font-size 24px
		color rgba(36, 175, 242,1)
 
.sum
	display inline-block
	position relative
	vertical-align top
	
	input
		width 90px
		margin 5px 0px 0px 0px
		padding 0px 25px 0px 0px
		vertical-align top
		text-align right
		background transparent
		border 0
		
	& ::-webkit-input-placeholder, ::-moz-placeholder, :-moz-placeholder, :-ms-input-placeholder
		color:rgba(255, 255, 255, 0.6)

	span
		position absolute
		top 6px
		right 8px
		font-size 18px
		color black

.switch-input 
  display none  

.switch-input:checked + .cards, .switch-input:checked + .yamoney 
	padding 5px 1px 1px 1px
	background linear-gradient(to top, rgba(41, 146, 228, 0), rgba(41, 146, 228, 0.6))
	box-shadow inset 0 0 10px rgba(41, 146, 228, 0.5);
	border 0
	
	svg path
	  fill black

.switch-input:checked +.yamoney
	padding 5px 0px 1px 1px
	  
.cards, .yamoney
	width 80px
	height 35px
	padding 3px 0px 0px 0px
	border 1px solid rgba(0, 0, 0, 0.1)
	display inline-block
	vertical-align top
	text-align center
	
	& svg
	  width 70px
	  height 25px
	  
	  & path
	    fill rgba(0, 0, 0, 0.5)

.cards
	border-top-left-radius 3px
	border-bottom-left-radius 3px	    
	
.yamoney
	border-left 0
	border-top-right-radius 3px
	border-bottom-right-radius 3px	

@import 'typo'
