//Крутой материал
.cover
	position relative
	width 100%
	height 320px
	
.poster
	width 100%
	height 320px
	color white
	background-position center
	
	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0,0,0,0.5)


.poster 
	.poster-info
		width 840px
		padding 100px 0px 0px 0px
		margin 0 auto 0 auto	
		display block
		position relative
		z-index 1
		border 0
		
		&:hover h1
		  //color rgba(255, 255, 255, 0.7)
		  text-shadow 0px 0px 10px rgba(191, 226, 255, 0.6)
		  border-color rgba(255, 255, 255, 0.7)

  .image
	  width 180px
	  height 180px
	  margin 0px 20px 0px 40px
	  display inline-block
	  background-size contain
	  background-position top
	  background-repeat no-repeat
	  vertical-align middle

.caption
	width 500px
	margin 0 40px 0 0
	vertical-align middle
	display inline-block
 
	& h1	
		margin 0px 0px 15px 0px
		display inline
		border-bottom 1px solid rgba(255, 255, 255, 0.5)
		font-family f_headline
		font-size 28px
		line-height 44px 
		color white
	
	& span
		margin 0 0 0 0
		display block
		font-size 24px
		font-family f_Default 
		line-height 1.3em
		letter-spacing 0.05em
		color white

// Новости
.news-wrap
	width 100%
	min-height 100px
	padding 20px 0px 10px 0px
	
.news
	width 960px
	margin auto auto auto auto
	
/* Скролье ** отключен
