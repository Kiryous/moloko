	opacity 0.2
*/

.entry
	width 220px
	min-height 80px
	margin 0px 20px 0px 0px
	padding 5px 0px 10px 3px
	vertical-align top
	display inline-block
	font-size 16px
	
	span
	  font-size 10px
	  color rgba(0, 0, 0, 0.7)
	
	&:last-of-type
		margin 0 0 0 0

.smallcapitals 
	text-transform: uppercase
  font-size .88em
  letter-spacing .15em
  margin-right -.15em

