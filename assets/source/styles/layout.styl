//Подвал
.footer-wrap
	width 100%
	min-height 120px
	background rgba(42, 50, 55, 0.03)
	box-shadow inset 0px 1px 18px 0px rgba(0, 0, 150, 0.06)	
	color rgba(0, 0, 0, 0.9)
	
	/*@media mobile
		height 150px*/

.footer
	@extend .container
	padding 40px 20px 0px 20px
	position relative
	font-size 16px
	background-size 400px
	background-repeat no-repeat
	background-position 350px 39%

.ask
	display inline-block
	float right
	
	/*@media mobile
		margin 20px 0 0 0*/

	.text
		display inline-block
		vertical-align middle
	
	.likely
		vertical-align middle
		margin 0 0 0 10px
	
	.likely__widget
		height 26px
		padding 2px 3px 2px 3px
		
		&:first-of-type
			margin 0 0 0 0
	
	.likely__button
		padding 1px 4px 1px 2px 
		
	.likely .likely__widget+.likely__widget
		margin 0 0 0 10px

.copyright
	display inline-block
	vertical-align middle

	span
		margin 0 15px 0 0
		color rgba(0, 0, 0, 0.6)
		
	p
		margin 10px 0 0 0
		font-size 14px
		color rgba(0, 0, 0, 0.6)
	
	ul
		display inline-block	

	ul li
		display inline-block
		margin 0px 15px 0px 0px

