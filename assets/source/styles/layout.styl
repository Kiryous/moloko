@import 'variables'
@import 'starty'

body
  width 100%
  font-family f_Helvetica
  background rgba(255, 255, 255, 1)
  font-size 18px
  line-height 20px
  

.container
	width 1000px
	margin 0 auto 0 auto
	padding 20px 20px 0px 20px
	
	/*@media mobile
		width 100%*/
			
// Шапка
.header-wrap
	width 100%
	position absolute
	top 0
	left 0
	z-index 2

header
	@extend .container
	

.logo,.logo:visited
	height 40px 
	margin 0 10px 0 0
	padding 10px 0 0 0 
	display inline-block
	vertical-align top
	//background-image url(../source/images/logo-all-white.png)
	//background-size 171px 44px
	border 0
	font-family 'Shadow'
	font-size 32px
	color white
	z-index 1
	
	&:hover
		border-color white
		color white

@import 'social-links'

.search
	width 200px
	height 44px
	padding 8px 12px 8px 42px
	position relative
	float right
	background transparent
	background-image url(../source/images/search.svg)
	background-size 18px
	background-position 10px center
	background-repeat no-repeat
	border 0
	opacity 0.5
	color white
	transition .2s
	
	&:focus
		opacity 0.9
		transition .2s
		
//Автопрефиксер не справляется, пришлось оставить
$searchPlaceHolder
	color:rgba(255, 255, 255, 0.6)

.search::-webkit-input-placeholder
	$searchPlaceHolder
.search::-moz-placeholder
	$searchPlaceHolder
.search :-moz-placeholder
	$searchPlaceHolder
.search :-ms-input-placeholder
  $searchPlaceHolder

//Тёмная шапка
.header-wrap.light
	padding 0 0 20px 0
	position relative
	border-bottom 1px solid rgba(0, 0, 0, 0.1)
	
	.logo,.logo:visited
		color molokoColor
		
		&:hover
			text-decoration: underline;
	
	.search
		color black
		background-image url(../source/images/search-dark.svg)
		
	$searchPlaceHolder
		color black
		
 //Фоторама 
.fotorama
	position relative

.fotorama__arr--prev
	margin -30px 0 0 30px
	background url(../source/images/prev.svg)

.fotorama__arr--next
	margin -30px 30px 0 0
	background url(../source/images/next.svg)
	
.fotorama__arr--prev,.fotorama__arr--next
	background-repeat no-repeat
	background-position center
	width 31px
	height 58px
	
// .fotorama__arr--prev:hover, .fotorama__arr--next:hover
// 	transform scaleY(0.7)



//Крутой материал
.cover
	position relative
	width 100%
	height 320px
	background rgba(54, 53, 53, 1)
	
.poster
	width 100%
	height 100%
	color white
	position relative
	background-size cover
	background-position center
	background-repeat no-repeat
	
	&:after
		content ' '
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba(0,0,0,0.5)
		transition .2s
	
	& .poster-info
		width 1000px
		padding 100px 20px 0 20px
		margin 0 auto 0 auto	
		display block
		position relative
		z-index 1
		border 0
		
		&:hover h1
		  //color rgba(255, 255, 255, 0.7)
		  text-shadow 0px 0px 10px rgba(191, 226, 255, 0.6)
		  border-color rgba(255, 255, 255, 0.7)

  	& .image
		  width 180px
		  height 180px
		  margin 0px 20px 0px 40px
		  display inline-block
		  background-size contain
		  background-position top
		  background-repeat no-repeat
		  vertical-align middle

.caption
	width 700px
	padding 0 40px 0 0
	vertical-align middle
	display inline-block
	
	/*@media mobile
		width 100%*/
 
	& h1	
		margin 0 0 15px 0
		display inline
		border-bottom 1px solid rgba(255, 255, 255, 0.5)
		font-family f_headline
		font-size 36px
		line-height 1.2em
		color white
	
	& span
		margin 5px 0 0 0
		display block
		font-size 22px
		font-family f_Default 
		line-height 1.2em
		color white

// Новости
.news-wrap
	width 100%
	min-height 100px
	
.news
	@extend .container

.news-wrap.border
	padding 0 0 40px 0
	border-top 1px solid rgba(0, 0, 0, 0.1)

.news.col
	width 220px
	padding 0
	position absolute
	right 10px
	z-index 1
	background white
	
	
