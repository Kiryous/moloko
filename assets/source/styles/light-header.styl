.cover.light-header
	height auto
	min-height 250px
	background white

.poster.light-header
	height auto
	min-height 200px
	
	&:after
		display none

.poster-info.light-header
	width 1000px
	height auto
	min-height 200px
	padding 100px 20px 0 20px
	color black
	
	& .caption h1
		color black
	
	& .caption span
		color black
	
	& .infobar
		position relative
		margin 40px 0 0 0 
		
		& .views
			background-image url(../source/images/eye-dark.svg)
		
		& .likely
			float none

